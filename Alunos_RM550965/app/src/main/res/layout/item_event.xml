<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="0dp"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"> <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local:"
        android:textColor="#000000"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/textEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textImpactDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impacto:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textAffectedPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pessoas afetadas:"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF3B30"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>